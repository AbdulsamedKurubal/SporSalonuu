@{
    ViewData["Title"] = "Yönetici Paneli";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🏋️ Yönetici Paneli</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Salon İşlemleri</div>
                <div class="card-body">
                    <h5 class="card-title">Spor Salonlarını Yönet</h5>
                    <p class="card-text">Yeni salon ekle, mevcutları listele veya sil.</p>
                    <a href="/Yonetici/SalonListesi" class="btn btn-light">Salonları Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Antrenör İşlemleri</div>
                <div class="card-body">
                    <h5 class="card-title">Antrenörleri Yönet</h5>
                    <p class="card-text">Sisteme yeni antrenör tanımla veya sil.</p>
                    <a href="/Yonetici/AntrenorListesi" class="btn btn-light">Antrenörleri Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-12 mt-3">
            <div class="card text-dark bg-warning mb-3">
                <div class="card-header fw-bold">Ders & Hizmet İşlemleri</div>
                <div class="card-body">
                    <h5 class="card-title">Dersleri Yönet</h5>
                    <p class="card-text">Salonlara Pilates, Yoga gibi dersler tanımla ve fiyatlarını belirle.</p>
                    <a href="/Yonetici/HizmetListesi" class="btn btn-dark">Dersleri Yönet</a>
                </div>
            </div>
        </div>
    </div>
</div>
