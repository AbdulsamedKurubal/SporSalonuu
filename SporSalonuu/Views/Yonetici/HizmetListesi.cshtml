@model List<SporSalonuu.Entities.Hizmet>
@{
    ViewData["Title"] = "Hizmet Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Salon Dersleri</h3>
        <a href="/Yonetici/HizmetEkle" class="btn btn-primary">+ Yeni Ders Ekle</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ders Adı</th>
                <th>Bağlı Olduğu Salon</th>
                <th>Süre / Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr><td colspan="4" class="text-center">Henüz ders eklenmemiş.</td></tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>
                        <span class="badge bg-warning text-dark">
                            @(item.Salon != null ? item.Salon.Ad : "Salon Silinmiş")
                        </span>
                    </td>
                    <td>@item.SureDakika dk / @item.Ucret TL</td>
                    <td>
                        <a href="/Yonetici/HizmetSil/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istiyor musunuz?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Yonetici/Index" class="btn btn-secondary">Panele Dön</a>
</div>