@model List<SporSalonuu.Entities.Antrenor>
@{
    ViewData["Title"] = "Antrenör Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Antrenör Kadrosu</h3>
        <a href="/Yonetici/AntrenorEkle" class="btn btn-primary">+ Yeni Antrenör Ekle</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Uzmanlık Alanı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">Henüz kayıtlı antrenör yok.</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad @item.Soyad</td>
                    <td><span class="badge bg-info text-dark">@item.UzmanlikAlani</span></td>
                    <td>
                        <a href="/Yonetici/AntrenorSil/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('@item.Ad adlı antrenörü silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Yonetici/Index" class="btn btn-secondary">Panele Dön</a>
</div>