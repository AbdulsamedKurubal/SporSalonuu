@model List<SporSalonuu.Entities.Salon>
@{
    ViewData["Title"] = "Salon Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Spor Salonları</h3>
        <a href="/Yonetici/SalonEkle" class="btn btn-primary">+ Yeni Salon Ekle</a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Salon Adı</th>
                <th>Adres</th>
                <th>Çalışma Saatleri</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salon in Model)
            {
                <tr>
                    <td>@salon.Ad</td>
                    <td>@salon.Adres</td>
                    <td>@salon.AcilisSaati - @salon.KapanisSaati</td>
                    <td>
                        <a href="/Yonetici/SalonSil/@salon.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Yonetici/Index" class="btn btn-secondary">Panele Dön</a>
</div>